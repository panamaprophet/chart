{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "es2017",
        "module": "ES6",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true
    },
    "include": ["src"]
}
